{
    "compilerOptions": {
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "experimentalDecorators": true,
        "noEmitOnError": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "outDir": "dist-es/",
        "rootDir": "lib/"
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules"
    ]
}
